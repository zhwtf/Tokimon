<% provide(:title, 'New Tokimon') %>
<h1>Create new Tokimon</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@tokimon) do |f| %>
    	
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :weight %>
      <%= f.text_field :weight , class: 'form-control' %>

      <%= f.label :height %>
      <%= f.text_field :height , class: 'form-control' %>

      <%= f.label :fly %>
      <%= f.text_field :fly , class: 'form-control' %>

      <%= f.label :fight %>
      <%= f.text_field :fight , class: 'form-control' %>

      <%= f.label :fire %>
      <%= f.text_field :fire , class: 'form-control' %>

      <%= f.label :water %>
      <%= f.text_field :water , class: 'form-control' %>

      <%= f.label :electric %>
      <%= f.text_field :electric , class: 'form-control' %>

      <%= f.label :frozon %>
      <%= f.text_field :frozon , class: 'form-control' %>

      <%= f.label :trainer_id %>
      <%= f.text_field :trainer_id , class: 'form-control' %>
      

      

      <%= f.submit "Create new Tokimon", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
