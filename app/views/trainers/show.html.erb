<div class="col-md-8">
 
    <% if @trainer.tokimons.any? %>
      <h3> Total tokimons (<%= @trainer.tokimons.count %>)</h3>
      <ol class="tokimons">
        <%= render 'tokimons/tokimon' %>
      </ol>
      
    <% end %>
  </div>



